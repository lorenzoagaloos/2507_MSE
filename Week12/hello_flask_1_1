"""A simple Flask web application that returns 'Hello, Flask!' when accessed at the root URL."""
from flask import Flask
app = Flask(__name__)

@app.route("/")
def hello_flask():
    return "<p>Hello, Flask!</p>"

@app.route("/bye!")
def bye():
    return "<p>Goodbye, Flask!</p>"

@app.route("/username/<name>")
def learn(name):
    Name = "Lily"
    return f"<p>Hello, {name}! You are learning Flask!</p>"

if __name__ == "__main__":
    app.run(debug=True)
